<div>
  <div>
    <h1>
      List of users
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private?
        </th>

        <th></th>

        <th></th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.username %>
        </td>

        <td>
          <% privacy = a_user.private %>
          <% if privacy == 0%>
            No
          <% else %>
            Yes
          <% end %>
        </td>

        <td>
          <% if session[:user_id] == nil %>
          <!-- button with follow logic -->
          <% end %>
        </td>

        <td>
          <a href="/users/<%= a_user.username %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
